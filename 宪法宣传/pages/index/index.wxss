/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.swiper{
  width: 750rpx;
  height: 400rpx;
}
.swiper_item{
  width: 750rpx;
  height: 400rpx;
}
.top_bar{
  width: 750rpx;
  height: 180rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.top_bar_item{
  width: 187.5rpx;
  height: 180rpx;
  display: flex;
  flex-direction:column;
  align-items:center;
  justify-content: center;
}
.top_bar_item_img{
  height: 150rpx;
  width: 110rpx;
  margin: 20rpx 20rpx 10rpx 20rpx;
}
.top_bar_item_text{
  font-family:微软雅黑;
  font-size: 30rpx;
}
.body{
  width: 750rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content:center;
}
.body_bar{
  width: 750rpx;
  height: 200rpx;
}
.body_bar_img{
  width: 750rpx;
  height: 200rpx;
}